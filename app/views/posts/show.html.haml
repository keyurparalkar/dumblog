



.container
  .row
    .col-md-8.col-xs-10.col-md-offset-2
      %h1.h1=@post.title
      by
      =link_to @post.user.user_name , "/"+@post.user.user_name
      %br

      #{raw @post.tag_list.map { |t| link_to t, tag_path(@post.user.user_name,t) }.join(', ')}
      %br

      -if current_user==@post.user
        =link_to "delete post" ,post_path(@post), method: :delete ,:class =>  "button is-info"
        =link_to "edit post" ,edit_post_path(@post) ,:class =>  "button is-info"
        =@post.views.to_s + " views"

      %br
      %hr
      =markdown (@post.body)
      =render partial: "layouts/sharing" , locals:{title: @post.title}

      = form_for [@post, @post.comments.new] do |f|
        .field
          %p.content
            = f.text_area :content ,:class => "form-control" 
          %p.content
            = f.button :comment , :class => "btn primary"
      .panel.panel-default
        .panel-body
          = nested_comments @post.comments.arrange(:order => :created_at)