
<div class="container">


<% @notifications.each do |n| %>
  <%= link_to n.comment.user.user_name , "/"+n.comment.user.user_name %>
  commnted on
  <% if n.comment.parent %>
    <em>
     <%=link_to n.comment.parent.content , post_path(n.comment.root.post) %>
    </em>
  <% else %>
    <em>
      <%=link_to n.comment.post.title ,post_path(n.comment.post)  %>

    </em>
  <% end %>
  <br/>
  <%= n.comment.content %>

  <hr/>
<% end %>
</div>



